@model IEnumerable<BeanScene2.Models.Permission>

@{
    ViewData["Title"] = "Permission Index";
}

<h1>Permission Index</h1>

<p>
    <a asp-action="Create"><i class="bi bi-plus-square"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CanRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanCreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanDelete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CanRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanDelete)
            </td>
            <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PermissionId"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PermissionId"><i class="bi bi-eye"></i> Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PermissionId"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
