@model IEnumerable<BeanScene2.Models.Reservation>

@{
    ViewData["Title"] = "Reservation Index";
}

<h1>Reservation Index</h1>

<p>
    <a asp-action="Create"><i class="bi bi-plus-square"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SittingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTIme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGuest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sitting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Table)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SittingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGuest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitting.SittingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.TableId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservationId"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservationId"><i class="bi bi-eye"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservationId"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
