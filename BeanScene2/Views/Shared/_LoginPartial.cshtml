@{
    string userName = User.Identity.Name;
}
<ul>
    @if (!string.IsNullOrEmpty(userName))
    {


        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>

        </li>
        <li class="nav-item">
            @*<a id="manage" class="nav-link text-dark" asp-area="" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
            <a class="nav-link text-dark" id="login" asp-area="" asp-controller="User" asp-action="ChangePassword">Change Password</a>

        </li>
    }
    else if (string.IsNullOrEmpty(userName))
    {

        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>
